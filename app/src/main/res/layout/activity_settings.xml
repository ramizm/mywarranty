<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:background="#323C5E"
        android:weightSum="1">

        <ImageButton
            android:layout_margin="13dp"
            android:layout_width="12dp"
            android:layout_height="24dp"
            android:id="@+id/btn_setting_back"
            android:background="@drawable/back"/>
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:text="환경설정"
            android:textSize="9.5pt"
            android:textStyle="bold"
            android:textColor="#ffffff"
            android:layout_gravity="center_vertical"
            android:gravity="center"
            android:layout_weight="0.06" />
    </RelativeLayout>
    <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:background="#ffffff"
            android:weightSum="1">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                android:text="버전 정보"
                android:textSize="9.5pt"
                android:padding="10dp"
                android:textColor="#000000"
                android:layout_gravity="center_vertical"
                />
        <Button
            android:layout_margin="7dp"
            android:layout_width="wrap_content"
            android:layout_height="24dp"
            android:id="@+id/btn_versioninform"
            android:layout_alignParentRight="true"
            android:background="#ffffff"
            android:text="V1.1 >" />
        </RelativeLayout>
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:background="#ffffff"
        android:weightSum="1">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:text="푸쉬 알림"
            android:textSize="9.5pt"
            android:padding="10dp"
            android:textColor="#000000"
            android:layout_gravity="center_vertical"
            />
        <Switch
            android:layout_margin="5dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/switch_pushalarm"
            android:background="#ffffff"
            android:layout_alignParentRight="true"/>
    </RelativeLayout>
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:background="#ffffff"
        android:weightSum="1">

        <Button
            android:id="@+id/btn_passwordsettings"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="암호설정"
            android:textSize="9.5pt"
            android:padding="10dp"
            android:textColor="#000000"
            android:background="#ffffff"
            />

    </RelativeLayout>
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:background="#ffffff"
        android:weightSum="1">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:text="자주묻는 질문"
            android:textSize="9.5pt"
            android:padding="10dp"
            android:textColor="#000000"
            android:layout_gravity="center_vertical"
            />
        <ImageButton
            android:layout_margin="13dp"
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:id="@+id/btn_fre_question"
            android:background="@drawable/info"
            android:layout_alignParentEnd="true"
            />
    </RelativeLayout>


</LinearLayout>
