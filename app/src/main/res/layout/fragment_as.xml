<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.example.ramizm_2.mywarranty.ASFragment">

    <ImageButton
        android:id="@+id/btn_as_list"
        android:layout_width="@dimen/warranty_list_width"
        android:layout_height="@dimen/warranty_list_height"
        android:layout_marginRight="@dimen/horizontal_margin"
        android:layout_marginTop="@dimen/margin_between_objects"
        android:layout_marginBottom="@dimen/margin_between_objects"
        android:layout_gravity="right"
        android:background="@drawable/list"/>

    <GridView
        android:id="@+id/grid_as"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="center"
        android:paddingRight="@dimen/margin_between_objects"
        android:paddingLeft="@dimen/margin_between_objects"
        android:numColumns="2" />

</LinearLayout>
